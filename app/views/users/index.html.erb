<br><br>
<div class = "container">
	<div class = "row">
		<div class = "col-xs-3">
			<%= render 'users/usercommon', user: @user %>
			<%= render 'books/bookcommon', book: @book %>
		</div>

		<div class = "col-xs-9">
			<%= form_tag(search_path, :method => 'get' ) do %>
				<%= text_field_tag 'search[content]' %>
      	<%= select_tag 'search[model]', options_for_select({ "User" => "user", "Book" => "book" }) %>
      	<%= select_tag 'search[method]', options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
      <%= submit_tag '検索' %>
			<% end %>
			<h1>Users</h1>
			<table class="table table-hover">
				<thead>
					<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
					</tr>
				</thead>

				<tbody>
					<tr>
						<% @users.each do |user| %>

						<td><%= attachment_image_tag user, :profile_image, size:"60x60", fallback:"no_image.png", format:'png' %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>
